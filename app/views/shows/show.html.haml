=render @show
:css
  .pause {
    display:none;
  }

:javascript
  var current_song;
  var current_filename;
  var root_url = 'https://archive.org/download/#{@show.identifier}/';
  filenames = JSON.parse( "#{j @show.songs.pluck(:filename).to_json}" );
  song_ids = JSON.parse( "#{j @show.songs.pluck(:id).to_json}" );
  song_names = JSON.parse( "#{j @show.songs.pluck(:title).to_json}" );
  var current_track = 0;
  $('#player .song-show').html('#{@show.title}');
  playSong();

