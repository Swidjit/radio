
#player
  #song
  .row
    .large-10.columns
      .row
        .large-12.columns
          .song-info.left
            .song-title.expand-song
            .song-time
            .song-show msg in 2013-23-45

      .row
        .large-12.columns

          .song-controls.left
            .play
              %i.fi-play
            .pause
              %i.fi-pause
            .fast-forward
              %i.fi-fast-forward
            .next
              %i.fi-next
          .song-actions.right
            -if user_signed_in?
              #player-reactions
                =link_to song_reaction_path(1, :type => "like"),  :remote=>"true",:method => "post",:class=>'player-action' do
                  .like
                    %i.fi-like

                =link_to song_reaction_path(1, :type => "love"),  :remote=>"true",:method => "post",:class=>'player-action' do
                  .love
                    %i.fi-heart

                =link_to song_reaction_path(1, :type => "share"),  :remote=>"true",:method => "post",:class=>'player-action' do
                  .share
                    %i.fi-share

                .collect{:'data-song-id'=>1,:style=> "cursor:pointer;margin-left: 10px; color: #274472;",:class=>'player-collect'}
                  %i.fi-folder

    .large-2.columns{:style => 'background-color:#835B9F;height:60px;'}
      .play-controls.text-center
        %i.fi-shuffle.shuffle
        -if user_signed_in?
          %i.fi-list.playlists
          %i.fi-music.radio





