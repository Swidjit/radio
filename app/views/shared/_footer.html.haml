  $(document).on('click', '.play-song', function() {

    $('#player').show();
    origin = $(this).attr('origin');
    if(origin=='show' && mode != 'radio') {
      mode = 'show';
      console.log(mode);
      current_track = parseInt($(this).attr("track"))-1;
      show = $(this).closest('.show');
      tracks = [];
      $.each(show.find('.play-song'), function(i,val) {
        if(i >= current_track) {
          console.log(player.tracks.length);
          tracks.push('https://archive.org/download/'+$(this).attr('show_id')+'/'+$(this).attr('filename'));

        }
      });
      player.stop();
      player = new Gapless5("gapless5-block", {
        tracks: tracks,
        loop: true,
        mapKeys: {prev: "a", playpause: "s", stop: "d", next: "f"}
      });
      player.play();
    }
    else if(origin=='playlist') {
      mode = 'playlist';
      current_track = parseInt($(this).attr("track"));
      playlist = $(this).closest('.playlist');
    }
    else {
      player.replaceTrack(0,'https://archive.org/download/'+$(this).attr('show_id')+'/'+$(this).attr('filename'));

      console.log(player);
      player.play();
    }

  });

  $(document).on('click', '.pause', function() {
    player.pause();
    $('#player .play').show();
    $('#player .pause').hide();
  });
  $(document).on('click', '.play', function() {
    player.play();
    $('#player .play').hide();
    $('#player .pause').show();
  });
  $(document).on('click', '.fast-forward', function() {
    forwardAudio();
  });

  $(document).on('click', '.next', function() {
    player.next();
  });


