:javascript
  var current_song;
  var current_filename;
  var root_url;
  var filenames = {};
  var song_names = {};
  var current_track;
  $('#login-button').on('click', function() {
    var data = {
      user: {login: $('#login-username').val(), password: $('#login-password').val(), remember_me: '1'}
    }

    $.ajax({ url: '/users/sign_in',
      type: 'POST',
      headers: {
          'X-CSRF-Token': '<%= form_authenticity_token.to_s %>'
        },
      data: data,
      success: function(response) {
        $('#login').foundation('reveal','close');
        $('.menu ul.inline-list').empty();
        setTimeout(function() {
           $('.menu ul.inline-list').html('#{escape_javascript render :partial=>"users/header_menu"}');
           window.location = '#{root_path}';
        }, 1000);


      },
      error: function(xhr, status, error) {
          alert(xhr.responseText);
       }
    });
  });



  $(document).on('click', '.song-name', function() {
    $('#player').show();
    current_track = parseInt($(this).attr("track"))-1;
    show_id = $(this).attr("show_id");
    root_url = 'https://archive.org/download/'+show_id+'/';
    playSong();
  });

  $(document).on('click', '.pause', function() {
    current_song.pause();
    $('#player .play').show();
    $('#player .pause').hide();
  });
  $(document).on('click', '.play', function() {
    current_song.play();
    $('#player .play').hide();
    $('#player .pause').show();
  });
  document.addEventListener('ended', function(e){
    if($(e.target).is('audio')){
      current_track += 1;
      playSong();
    }
  }, true);


  function playSong() {
      src = root_url+filenames[show_id][current_track];
      console.log(src);
      html='<audio id="current-song" src="'+src+'"></audio>';
      $('#player #song').html(html);
      $('#player .play').hide();
      $('#player .pause').show();

      current_filename = filenames[show_id][current_track];
      console.log(current_filename);
      current_song = document.getElementById('current-song');
      console.log(current_song);
      current_song.play();
      $('#player .song-title').html(song_names[show_id][current_track]);
  }

  $('.hey').on('click',function() {
    console.log(filenames);
  });
