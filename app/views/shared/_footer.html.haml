  $(document).on('click','.shuffle',function() {
    if(mode == "shuffle") {
      mode = "off";
      $(this).removeClass('selected');
    }
    else {
      mode = "shuffle";
      $(this).addClass('selected');
    }

  });
  $(document).on('click','.radio',function() {
    if(mode == "radio") {
      mode = "off";
      $(this).removeClass('selected');
    }
    else {
      mode = "radio";
      $(this).addClass('selected');
    }
    console.log(mode);
