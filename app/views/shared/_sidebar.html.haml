#sidebar
  %hr
  .section
    -if user_signed_in?
      =link_to 'Dashboard','/pages/dashboard', :remote=>:true
    =link_to 'Popular','/pages/popular', :remote=>:true
    =link_to 'Explore','/pages/explore', :remote=>:true
    =link_to 'Discussion','/pages/discussion', :remote=>:true
  %hr
  .section
    #band-label
    #years
      -if @band
        -years = @band.shows.order(year: :asc).pluck(:year)
        -years = years.uniq
        -for i in years
          =link_to i.to_s, '/bands/'+@band.id.to_s+'/shows/year/'+i.to_s, :remote => :true
    .show-bands
      show bands